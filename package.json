{
  "name": "tempo-sync",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "reset": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' +\n",
    "db:studio": "turbo run --filter=@tempo-sync/db db:studio"
  },
  "devDependencies": {
    "dotenv-cli": "^7.4.4",
    "prettier": "^3.7.4",
    "turbo": "^2.7.4",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
