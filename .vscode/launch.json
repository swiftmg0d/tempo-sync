{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Integrations (Wrangler)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["--filter", "@tempo-sync/integrations", "dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug API (Wrangler)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["--filter", "@tempo-sync/api", "dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug All (Turbo Dev)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Attach to Wrangler",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true
    },
    {
      "name": "Attach to Integrations Worker",
      "type": "chrome",
      "request": "attach",
      "port": 9230,
      "urlFilter": "*",
      "webRoot": "${workspaceFolder}/apps/integrations"
    }
  ],
  "compounds": [
    {
      "name": "Debug API + Integrations",
      "configurations": ["Debug API (Wrangler)", "Debug Integrations (Wrangler)"]
    }
  ]
}
