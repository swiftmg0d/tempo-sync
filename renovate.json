{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":separateMajorMinorReleases",
    ":semanticCommits",
    "helpers:pinGitHubActionDigests"
  ],
  "labels": ["dependencies"],
  "reviewers": ["swiftmg0d"],
  "rangeStrategy": "auto",
  "timezone": "Europe/Paris",
  "schedule": ["before 9am on weekdays"],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 3,
  "minimumReleaseAge": "3 days",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am on monday"]
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "minimumReleaseAge": "0 days"
  },
  "packageRules": [
    {
      "description": "Auto-merge lint & format (patch + minor)",
      "matchPackageNames": ["eslint*", "@eslint/**", "prettier*", "typescript-eslint", "globals"],
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "groupName": "lint & format"
    },
    {
      "description": "Group React ecosystem",
      "matchPackageNames": [
        "react",
        "react-dom",
        "@types/react*",
        "react-*",
        "@vitejs/plugin-react"
      ],
      "groupName": "react"
    },
    {
      "description": "Group Emotion & Chakra UI",
      "matchPackageNames": ["@emotion/**", "@chakra-ui/**"],
      "groupName": "emotion & chakra"
    },
    {
      "description": "Group TanStack packages",
      "matchPackageNames": ["@tanstack/**"],
      "groupName": "tanstack"
    },
    {
      "description": "Group Vite & build tools",
      "matchPackageNames": ["vite", "vite-*", "rollup-*", "terser", "turbo"],
      "groupName": "vite & build"
    },
    {
      "description": "Group Cloudflare packages",
      "matchPackageNames": ["wrangler", "@cloudflare/**"],
      "groupName": "cloudflare"
    },
    {
      "description": "Group Hono packages",
      "matchPackageNames": ["hono", "@hono/**"],
      "groupName": "hono"
    },
    {
      "description": "Group Drizzle ORM (pinned beta â€” disabled until stable)",
      "matchPackageNames": ["drizzle-*"],
      "groupName": "drizzle",
      "enabled": false
    },
    {
      "description": "Group map packages",
      "matchPackageNames": ["maplibre-gl", "@vis.gl/**", "@mapbox/**", "@types/mapbox*"],
      "groupName": "maps"
    },
    {
      "description": "Auto-merge @types (patch + minor)",
      "matchPackageNames": ["@types/**"],
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true
    },
    {
      "description": "Auto-merge devDependency patches",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "description": "Require manual review for major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["dependencies", "major"]
    }
  ]
}
